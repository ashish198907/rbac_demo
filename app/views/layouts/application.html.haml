!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "RBAC"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    -#%link(href="images/favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#{home_index_path}") RBAC
          .container.nav-collapse
            %ul.nav
              - if current_user
                %li= link_to "Manage Roles", roles_path
                %li= link_to "Manage Accesses", accesses_path
                %li= link_to "Manage Users", users_path
                %li= link_to "Manage Role-Accesses", accesses_roles_path
                %li= link_to "Manage User-Roles", roles_users_path
            %ul.nav{:style => "float:right;"}
              - if current_user
                %li= link_to "Welcome #{current_user.login}", edit_user_path(current_user)
                %li= link_to "Sign out", logout_path
              - else
                %li= link_to "Sign in", new_user_session_path
                %li= link_to "Sign Up", new_user_path
    .container.container_margin

      .row
        .span9
          = bootstrap_flash
          = yield
        - if current_user
          .span3
            .well.sidebar-nav
              %h3 Sidebar
              %ul.nav.nav-list
                %li.nav-header Access Visibility
                - Access.all.each do |a|
                  %li= link_to a.name ,"#" if current_user.has_access?(a.id)
    
      %footer
        %p
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
